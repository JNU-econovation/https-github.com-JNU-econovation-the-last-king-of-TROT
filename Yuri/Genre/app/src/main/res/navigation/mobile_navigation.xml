    <fragment
        android:id="@+id/navigation_singer"
        android:name="project.ggim.sample.ui.singer.SingerFragment"
        android:label="@string/title_singer"
        tools:layout="@layout/fragment_singer" />

    <fragment
        android:id="@+id/navigation_video"
        android:name="project.ggim.sample.ui.video.VideoFragment"
        android:label="@string/title_video"
        tools:layout="@layout/fragment_video" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="project.ggim.sample.ui.favorite.FavoriteFragment"
        android:label="@string/title_favorite"
